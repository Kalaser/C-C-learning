{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "task g++",
            "type": "shell",
            "command": "C:\\MinGW64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-L",
                "${fileDirname}\\EasyX",
                "-leasyx",
                "-lstdc++",
                "-lmsimg32",
                "-lgdiplus",
                "-lgdi32",
                "-lwinmm"
               
            ],
            "options": {
                "cwd":"C:\\MinGW64\\mingw64\\bin"},
            "problemMatcher": ["$gcc"],
            "group": "build"
        }
    ]
}